   Map.addLayer(ene_14,ndwiVizenero, 'enero_2014') +
   Map.addLayer(feb_14,ndwiVizfebrero, 'febrero_2014') +
   Map.addLayer(mar_14,ndwiVizmarzo, 'marzo_2014') +
