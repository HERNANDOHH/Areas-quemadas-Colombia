//Mcd64 area quemeda de 500m
var datasetMCD64_01 = ee.ImageCollection('MODIS/006/MCD64A1')
   .filterDate('2001-01-01', '2001-12-31')
  .select('BurnDate')
  .map(function(image) {
      return image.clip(colombia);
    });
